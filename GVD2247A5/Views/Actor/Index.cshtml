@model IEnumerable<GVD2247A5.Models.ActorBaseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Actor List</h2>

@using System.Security.Claims;
@if ((User as ClaimsPrincipal).HasClaim(ClaimTypes.Role, "Executive"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<hr />
@if (Model.Count() > 0) { 
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlternateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Executive)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlternateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    <img src="@item.ImageUrl" alt="@item.AlternateName" style=" max-width: 100px; max-height: 100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Executive)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
} else
            {
                <p>There are no actors yet</p>
            }
