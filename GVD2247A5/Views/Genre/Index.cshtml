@model IEnumerable<GVD2247A5.Models.GenreBaseViewModel>

@{
    ViewBag.Title = "Genres";
}

<h2>Genre List</h2>

<hr />
    @if (Model.Count() > 0)
            {
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
      
    </tr>
}

</table>
            } else { <p>There are no genres yet</p>}
